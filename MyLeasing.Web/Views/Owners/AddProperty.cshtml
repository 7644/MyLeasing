@model MyLeasing.Web.Models.PropertyViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OwnerId" />

           <!-- se usa para traer elementos que son iguales en varios html que estan contenidos en un html "Padre"-->
          <partial name="_Property"/>

            <div class="form-group">
                <input type="submit" value="create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">Back to owner</a>


            </div>




        </form>
    </div>
</div>

